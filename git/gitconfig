[push]
	default = current

[pull]
	rebase = true

[core]
	excludesfile = ~/.gitignore_global
	pager = delta --syntax-theme $([[ "$DARK_MODE_ACTIVE" = 1 ]] && echo "asi-dark" || echo "ansi-light")

[remote "origin"]
	prune = true

[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = true
	pager = true

[mergetool "nvim"]
	cmd = nvim -f -c \"Gdiffsplit!\" \"$MERGED\"

[merge]
	tool = nvim

[mergetool]
	prompt = false

[delta]
	line-numbers = true
	side-by-side = true

